<div class="newProjectImg">
    <div class="formBG">
        <div class="newProjectForm">

            <div class="row">
                <form class="col s12">
                    <br>
                    <h4>Project Info</h4>
                    <div class="row">
                        <div class="input-field col m6 s12">
                            <input id="title" type="text" class="validate">
                            <label style="color:black" for="title">Project Title</label>
                        </div>
                        <div class="input-field col m6 s12">
                            <input id="category" type="text" class="validate">
                            <label style="color:black" for="category">Category</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col m12">
                            <input id="description" type="text" class="validate">
                            <label style="color:black" for="description">Description</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col m6 s12">
                            <input id="people_needed" type="number" class="validate">
                            <label style="color:black" for="people_needed">People Needed</label>
                        </div>
                        <div class="col m6 s12">
                            <input id="date" type="date" class="validate">
                            <label style="color:black" for="date">Project Date</label>
                        </div>
                        <div class="col m6 s12">
                            <input id="image" type="text">
                            <label style="color:black" for="image">Project Image: Add Image address here</label>
                        </div>
                    </div>

                    <br>
                    <h4>Project Address</h4>
                    <div class="row">
                        <div class="input-field col m12">
                            <input id="streetAddress" type="text" class="validate">
                            <label style="color:black" for="address">street address</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col m12">
                            <input id="streetAddressLine2" type="text" class="validate">
                            <label style="color:black" for="address">street address line 2</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col m6">
                            <input id="city" type="text" class="validate">
                            <label style="color:black" for="address">city</label>
                        </div>
                        <div class="input-field col m6">
                            <input id="state" type="text" class="validate">
                            <label style="color:black" for="address">state / province</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col m6">
                            <input id="zipCode" type="text" class="validate">
                            <label style="color:black" for="address">postal / zip code</label>
                        </div>
                        <div class="input-field col m6">
                            <input id="country" type="text" class="validate">
                            <label style="color:black" for="address">country</label>
                        </div>
                    </div>
                    <button class="waves-effect waves-light btn" id="submit"><a href="/home">Submit</a></button>
                </form>
            </div>
        </div>
    </div>
